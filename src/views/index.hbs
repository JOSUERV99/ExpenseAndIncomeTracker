<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1 class="main-title"> Expenses and Income </h1>
        </div>
        <div class="card-body">
            <form action="/add" method="POST">
                <div class="form-group">
                    <input type="text" name="description" placeholder="Description" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="amount" placeholder="Amount" class="form-control">
                </div>
                <div class="form-group">
                    <label for="cat">Category</label>
                    <select id="cat" name="category" class="custom-select form-control">
                        <option  value="Basic Services">Services</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Food">Food</option>
                        <option value="Gym">Gym</option>
                        <option value="Transport">Transport</option>
                        <option value="Study">Study</option>
                        <option value="Other" selected>Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-radio">
                        <input type="radio" id="customRadio1" name="type" class="custom-control-input" value="Expense" checked="">
                        <label class="custom-control-label" for="customRadio1">Expense</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="customRadio2" name="type" value="Income" class="custom-control-input">
                        <label class="custom-control-label" for="customRadio2">Income</label>
                    </div>
                </div>
                <input class="btn btn-block btn-success" type="submit" value="Add">
            </form>
        </div>
        <div class="card-footer">
            
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">Amount</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr class="table-active">
                    <th scope="row">{{date}}</th>
                    <td>{{description}}</td>
                    <td>{{type}}</td>
                    <td>{{amount}}</td>
                    <td>
                        <a href="/delete/{{id}}/{{type}}" class="btn btn-danger">X</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>